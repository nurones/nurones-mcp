{
  "name": "nurones-mcp",
  "displayName": "Nurones MCP",
  "description": "Self-adaptive Model Context Protocol runtime with context engineering",
  "version": "0.5.0",
  "publisher": "nurones",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:nurones.mcp.openDashboard",
    "onCommand:nurones.mcp.execTool",
    "onCommand:nurones.mcp.viewTrace",
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "nurones.mcp.openDashboard",
        "title": "Nurones MCP: Open Dashboard"
      },
      {
        "command": "nurones.mcp.execTool",
        "title": "Nurones MCP: Execute Tool"
      },
      {
        "command": "nurones.mcp.viewTrace",
        "title": "Nurones MCP: View Context Trace"
      },
      {
        "command": "nurones.mcp.toggleContextEngine",
        "title": "Nurones MCP: Toggle Context Engine"
      },
      {
        "command": "nurones.mcp.showStatus",
        "title": "Nurones MCP: Show Status"
      }
    ],
    "configuration": {
      "title": "Nurones MCP",
      "properties": {
        "nuronesMcp.serverBinary": {
          "type": "string",
          "default": "${workspaceFolder}/mcp-core/target/release/nurones-mcp",
          "description": "Path to nurones-mcp server binary"
        },
        "nuronesMcp.serverConfig": {
          "type": "string",
          "default": "${workspaceFolder}/.mcp/config.json",
          "description": "Path to MCP server configuration file"
        },
        "nuronesMcp.adminWebUrl": {
          "type": "string",
          "default": "http://localhost:3000",
          "description": "Admin web UI URL"
        },
        "nuronesMcp.autoStart": {
          "type": "boolean",
          "default": true,
          "description": "Automatically start MCP server on activation"
        },
        "nuronesMcp.contextEngine": {
          "type": "boolean",
          "default": true,
          "description": "Enable Context Engine (adaptive tuning)"
        },
        "nuronesMcp.fsAllowlist": {
          "type": "string",
          "default": "${workspaceFolder},/tmp",
          "description": "Filesystem allowlist (comma-separated paths)"
        }
      }
    }
  },
  "scripts": {
    "build": "tsc -p .",
    "watch": "tsc -w -p .",
    "pack": "vsce package",
    "vscode:prepublish": "npm run build"
  },
  "dependencies": {},
  "devDependencies": {
    "typescript": "^5.6.3",
    "@types/vscode": "^1.90.0",
    "@types/node": "^20.10.0",
    "vsce": "^3.0.0"
  }
}
